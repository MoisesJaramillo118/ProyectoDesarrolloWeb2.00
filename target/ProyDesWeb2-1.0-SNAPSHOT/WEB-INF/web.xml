<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <!-- Nombre de la aplicación -->
    <display-name>SimCar Application</display-name>
    
    <!-- Descripción -->
    <description>Sistema de gestión de vehículos con autenticación</description>
    
    <!-- Configuración de Sesión -->
    <session-config>
        <!-- Timeout de 30 minutos -->
        <session-timeout>30</session-timeout>
        
        <!-- Configuración de cookies de sesión -->
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure> <!-- true en producción con HTTPS -->
        </cookie-config>
        
        <!-- Modo de tracking de sesión -->
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>
    
    <!-- Página de inicio -->
    <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
</welcome-file-list>
    
    <!-- Páginas de error personalizadas -->
    <error-page>
        <error-code>404</error-code>
        <location>/vistas/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/vistas/error/500.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>403</error-code>
        <location>/vistas/error/403.jsp</location>
    </error-page>
    
    <!-- Configuración de codificación -->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <scripting-invalid>false</scripting-invalid>
            <include-prelude>/WEB-INF/jspf/prelude.jspf</include-prelude>
        </jsp-property-group>
    </jsp-config>
    
    <!-- Parámetros de contexto -->
    <context-param>
        <param-name>app.version</param-name>
        <param-value>2.0</param-value>
    </context-param>
    
</web-app>
